<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <title>Dynamic judul</title>
</head>
<body>
  <div class="container d-flex flex-column justify-content-center" style="height: 100vh;">
    <h1>Daftar judul</h1>
    <div class="d-flex">
        <% judul.forEach(judul => { %>
        <div class="d-flex flex-column align-items-center" style="padding: 20px;">
            <a href="/judul/<%= judul.nama %>">
            <!-- Tampilkan thumbnail jika tersedia -->
            <% if(judul.thumbnail) { %>
                <img src="<%= judul.thumbnail %>" alt="Thumbnail" style="height: 200px;">
            <% } %>
            </a>
            <p><%= judul.nama %></p>
        </div>
        <% }); %>
    </div>
    <% if(isLoggedIn) { %>
        <a href="/tambah-manga">
            <button class="btn btn-primary">Tambah manga baru</button>
        </a>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
